<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e4e2"
    android:orientation="vertical" >


<LinearLayout 
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout 
        
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >
        
      

        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/noti" />
       <LinearLayout 
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
       
        android:layout_toRightOf="@+id/product_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Hopewell Mutanda"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1844 Crowobrough North Kuwadzana Harare"
             />
          <TextView
            android:id="@+id/textView2"
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female 25"/>
        </LinearLayout>
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"
        />
        
   
</LinearLayout>

<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_weight="1"
        android:layout_width="fill_parent" >
       
    

        <TextView
            android:id="@+id/desc"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Patient Information"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            />

       <View
             android:id="@+id/box_divider235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/desc"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />
       
      <LinearLayout 
        android:orientation="horizontal"
        android:layout_below="@id/box_divider235352"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
          
    <RelativeLayout
        android:id="@+id/lables"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="fill_parent" >

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="Patient ID"
           android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="5dp"
            android:text="Registration ID"
            android:textSize="18sp" />

         <TextView
             android:id="@+id/textView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/textView4"
             android:layout_marginTop="5dp"
             android:text="Registration Date"
             android:textSize="18sp" />
         
         <TextView
             android:id="@+id/consultant"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/textView5"
             android:layout_marginTop="5dp"
             android:text="Consulant"
             android:textSize="18sp" />
         
          <TextView
             android:id="@+id/ward"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/consultant"
             android:layout_marginTop="5dp"
             android:text="Ward"
             android:textSize="18sp" />
          
           <TextView
             android:id="@+id/room"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/ward"
             android:layout_marginTop="5dp"
             android:text="Room / Bed"
             android:textSize="18sp" />
           </RelativeLayout>
           
        <RelativeLayout
        android:id="@+id/lables"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="fill_parent" >

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="P011174823M"
           android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="5dp"
            android:text="H382MSD823483"
            android:textSize="18sp" />

         <TextView
             android:id="@+id/textView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/textView4"
             android:layout_marginTop="5dp"
             android:text="28 July 2014"
             android:textSize="18sp" />
         
         <TextView
             android:id="@+id/consultant"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/textView5"
             android:layout_marginTop="5dp"
             android:text="Dr T. Makaza"
             android:textSize="18sp" />
         
          <TextView
             android:id="@+id/ward"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/consultant"
             android:layout_marginTop="5dp"
             android:text="21"
             android:textSize="18sp" />
          
           <TextView
             android:id="@+id/room"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/ward"
             android:layout_marginTop="5dp"
             android:text="PW 20"
             android:textSize="18sp" />
           </RelativeLayout>
         
    </LinearLayout>     
    
     
       
    </RelativeLayout>
    
    
    <ImageView   
        style="@style/card_shadow"
        />
        
   
</LinearLayout>

<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/mdeia"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="RECENT ASSESMENT"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            />

       <View
             android:id="@+id/box_d235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/mdeia"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/box_d235352"
           android:layout_marginTop="5dp"
           android:text="The patient says is much better now in terms of insomania, no longer has insomania, no longer has loss of appetite although he thinks he may get a little bit more worse than before"/>
       
       <TextView
            android:id="@+id/conc"
            style="@style/card_content"
            android:layout_below="@id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:text="CONCLUSION"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
           />

       <View
             android:id="@+id/divider_conc"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/conc"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />
       
     <RelativeLayout
        android:id="@+id/headr_layout" 
        android:layout_below="@id/divider_conc"
        
        android:layout_width="fill_parent"
        
        android:layout_height="wrap_content">
       
       <ImageView
            android:id="@+id/imp"
            android:layout_width="wrap_content"
            
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_important" />
       
        <TextView
	      android:id="@+id/pre"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_centerVertical="true"
	      android:paddingLeft="10dp"
	     
	      android:layout_toRightOf="@id/imp"
	      android:text="Depression"/>
        </RelativeLayout>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"/>  
</LinearLayout>


</LinearLayout>
</ScrollView>
