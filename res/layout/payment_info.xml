<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e4e2"
    android:orientation="vertical" >


<LinearLayout 
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/mdeia"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="PATIENT INFORMATION"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

       <View
             android:id="@+id/box_d235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/mdeia"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/box_d235352"
           android:layout_marginTop="5dp"
           android:text="The patient says is much better now in terms of insomania, no longer has insomania, no longer has loss of appetite although he thinks he may get a little bit more worse than before"/>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"/> 
        
    
     <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/mdeia"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="SPONSORS / INSUARANCE"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

       <View
             android:id="@+id/box_d235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/mdeia"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/box_d235352"
           android:layout_marginTop="5dp"
           android:text="The patient says is much better now in terms of insomania, no longer has insomania, no longer has loss of appetite although he thinks he may get a little bit more worse than before"/>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"/>  
        
    
    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/mdeia"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="ADDRESS INFORMATION"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

       <View
             android:id="@+id/box_d235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/mdeia"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/box_d235352"
           android:layout_marginTop="5dp"
           android:text="The patient says is much better now in terms of insomania, no longer has insomania, no longer has loss of appetite although he thinks he may get a little bit more worse than before"/>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"/> 
        
    
    
</LinearLayout>


</LinearLayout>
</ScrollView>
