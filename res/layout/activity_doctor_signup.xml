<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:floatlabel="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".S">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Details"
            android:layout_marginBottom="@dimen/heading_space_bottom"
            style="?android:attr/listSeparatorTextViewStyle" />

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_1"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:layout_height="wrap_content"
            android:hint="Full Name" />

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Licensing Credentials" />
        
         <Spinner
            android:id="@+id/spinner1"
            android:entries="@array/spinner"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        
        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Residential Address" />

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_4"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:hint="Phone Number" />
        
         <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_21"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Email Address" />

        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Create Password"/>
        
        <com.iangclifton.android.floatlabel.FloatLabel
            android:id="@+id/float_label_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirm Password"/>
        
        <Button
                android:id="@+id/login"
               android:layout_marginLeft="5dp"
              android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
               
                android:text="Submit"
                 />
        
       
    </LinearLayout>
</ScrollView>
