<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical"
    android:showDividers="none" >

    <LinearLayout 
        style="@style/card_outer"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="Westend Private Hospital"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:maxLines="1"
            android:text="Dr H. Mutanda" />

        <TextView
            android:id="@+id/stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/desc"
            android:text="Thusrday 8 July" />

        <TextView
            android:id="@+id/short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Mukonama airwara chose ndakashanda naye zvakasimba ndichida kunyatsoona kuti dambudziko ringava raive papi" />

        <View
            android:id="@+id/div"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/short_desc"
            android:background="#c0c0c0"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/div"
            android:paddingTop="5dp"
            android:src="@drawable/mushonga" />

        <TextView
            android:id="@+id/pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div"
            android:layout_toRightOf="@id/imageView1"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Acetaminophen\nAdderall\nCiprofloxacin\nCitalopram" />
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"
        />
        
  </LinearLayout> 
</RelativeLayout>