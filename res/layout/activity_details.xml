<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e4e2"
    android:orientation="vertical" >


<LinearLayout 
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout 
        
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >
        
      

        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/noti" />
       <LinearLayout 
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
       
        android:layout_toRightOf="@+id/product_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Westend Private Hospizal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="105 Crn Samora Machel and Julius Nyerere Harare"
             />
         <TextView
            android:id="@+id/doc"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr H. Mutanda"
            android:textColor="#808080" />
          <TextView
            android:id="@+id/textView2"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 July 2014"
            android:textColor="#808080" />
        </LinearLayout>
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"
        />
        
   
</LinearLayout>

<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/desc"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Patient Story"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            />

       <View
             android:id="@+id/box_divider235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/desc"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/box_divider235352"
           android:layout_marginTop="5dp"
           android:text="1. Musoro unotema zvakanyanya\n2. Ndongonzwa kurwadziwa\n3. Ndinonyanya kunzwa nzara\n4. Zvkudya zviri kure neni"/>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"
        />
        
   
</LinearLayout>

<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/mdeia"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="ASSESMENT"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            />

       <View
             android:id="@+id/box_d235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/mdeia"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/box_d235352"
           android:layout_marginTop="5dp"
           android:text="The patient says is much better now in terms of insomania, no longer has insomania, no longer has loss of appetite although he thinks he may get a little bit more worse than before"/>
       
       <TextView
            android:id="@+id/conc"
            style="@style/card_content"
            android:layout_below="@id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:text="CONCLUSION"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
           />

       <View
             android:id="@+id/divider_conc"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/conc"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />
       
     <RelativeLayout
        android:id="@+id/headr_layout" 
        android:layout_below="@id/divider_conc"
        
        android:layout_width="fill_parent"
        
        android:layout_height="wrap_content">
       
       <ImageView
            android:id="@+id/imp"
            android:layout_width="wrap_content"
            
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_important" />
       
        <TextView
	      android:id="@+id/pre"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_centerVertical="true"
	      android:paddingLeft="10dp"
	     
	      android:layout_toRightOf="@id/imp"
	      android:text="Depression"/>
        </RelativeLayout>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"/>  
</LinearLayout>
<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/desc"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="PLAN"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            />
        <View
             android:id="@+id/box_div"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/desc"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />
        <TextView
	      android:id="@+id/pre"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_below="@+id/box_div"
	      android:paddingLeft="5dp"
	      android:paddingBottom="10dp"
	      android:paddingTop="5dp"
	      android:text="1. Acetaminophen 20MG PO OD\n2. Adderall\n3. Ciprofloxacin R/O 2/52\n4. Psychologist to see" />
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"
        />
        
   
</LinearLayout>
<LinearLayout 
        style="@style/card_outer"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner"
        android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/desc"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Phone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            />
         

       <View
             android:id="@+id/box_divider235352"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_below="@id/desc"
             android:layout_marginTop="5dp"
             android:background="#c0c0c0" />
      <RelativeLayout 
        android:layout_below="@id/box_divider235352"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

       <TextView
           android:id="@+id/call"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           
           android:layout_marginTop="5dp"
           android:text="Call Mobile"/>
        <TextView
           android:id="@+id/mobile"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/call"
           android:layout_marginTop="5dp"
           android:text="+263 77 538 5378"/>
	    <RelativeLayout
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	       <ImageButton
	         android:id="@+id/call_button"
	          android:src="@drawable/ic_action_go_to_today"
	         
	         android:paddingRight="20dp"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Button" />
	       
	       <View
	        android:id="@+id/div"
	         android:layout_toRightOf="@id/call_button"
		    android:layout_width="0.5dp"
		    android:layout_height="30dp"
		    android:layout_centerVertical="true"
		    android:background="#c0c0c0"/>
	      
	       <ImageButton
	         android:id="@+id/message_button"
	         android:src="@drawable/ic_action_send_now"
	         
	         android:paddingLeft="20dp"
	         android:layout_toRightOf="@id/div"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Button" />
	      </RelativeLayout>

	     

        </RelativeLayout>
       
    </RelativeLayout>
    
    <ImageView   
        style="@style/card_shadow"
        />
        
   
</LinearLayout>


</LinearLayout>
</ScrollView>
